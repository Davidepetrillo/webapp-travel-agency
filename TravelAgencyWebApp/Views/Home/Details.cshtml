@model Trip  
@{
    Layout = "LayoutDetails";
}
<div class="container">
        <div class="row">
            <div class="col">
            <h1 class="col text-center mt-5 fw-bold">Our amazing tours</h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <blockquote class="col-8 text-center text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce ex lacus, ullamcorper id tincidunt in, fermentum finibus orci. Phasalleus placerat aliquet metus scelerisque convallis.</blockquote>
        </div>
      </div>

        <div class="container pic">
            <div class="row p-3">
                <div class="col-6"><img src="@Model.Image" alt=""></div>
               </div>
        </div>
   
        <div class="container desc">
            <div class="row">
                <div class="col-6 profilo title">@Model.Title</div>
                </div>
            
            <div class="row">
                <div class="col-6 profilo lengthPrice">@Model.Length</div>
                </div>
           
            <div class="row">
                <div class="col-6 profilo description">@Model.Description</div>
                </div>

                <div class="row">
                <div class="col-6 profilo lengthPrice">@Model.Price</div>
                </div>
        </div>
